<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:AvaloniaMVVM.ViewModels;assembly=AvaloniaMVVM"
        Icon="resm:AvaloniaMVVM.Assets.avalonia-logo.ico"
        Title="AvaloniaMVVM"
        Height="640"
        Width="1280">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0"/>
    <Image x:Name="ImageCtrl" Source="{Binding RenderImage}" Grid.Column="0" Grid.Row="1" Stretch="Uniform"/>
  </Grid>

</Window>